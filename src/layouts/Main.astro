---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Title from "../components/Title.astro";

const {
    lang = 'en',
    title = 'FamilyMarkup',
    description = '',
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
<head>
    <BaseHead title={title} description={description}/>
    <slot name="head"/>
</head>

<body>

<Title
    lang={lang}
    title={title}
/>

<main>
    <article>
        <slot/>
    </article>
</main>

<Footer/>

</body>
</html>
