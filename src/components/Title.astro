---
import {getRelativeLocaleUrl} from 'astro:i18n';
import lang from '../lib/lang';

const loc = Astro.props.lang;
const __ = lang(loc);
const url = (path) => getRelativeLocaleUrl(loc, path);

const {title = 'FamilyMarkup'} = Astro.props;
const pathname = Astro.url.pathname.replace(/^\/\w{2}\b/, '');
---

<header>
    <nav>
        <a href="/" class="logo"><img src="/favicon.svg" alt="Logo"/></a>

        <div class="menu">
            ğŸ’» <a href={url('apps')}>{__('apps')}</a>
            ğŸ“¦ <a href={url('packages')}>{__('packages')}</a>
        </div>
    </nav>

    <div class="title">
        <h1>{title}</h1>

        <small>ğŸŒ <a href={pathname}>EN</a> <a href={"/uk" + pathname}>UA</a></small>
    </div>
</header>

<style>
	header nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 80px;
        border-bottom: 1px solid #e5e7eb;

        .logo {
            display: block;
            line-height: 0;

            img {
                height: 50px;
            }
        }

        .menu a {
            margin-right: 15px;

            &:last-child {
                margin-right: 0;
            }
        }
    }

    .title {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
    }
</style>
